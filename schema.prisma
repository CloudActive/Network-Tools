datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String  @id @default(cuid())
  name     String  @default("")
  email    String  @unique @default("")
  password String?
  isAdmin  Boolean @default(false)
}

model Domain {
  id                   String    @id @default(cuid())
  name                 String    @default("")
  registryCreationDate DateTime?
  registryExpiryDate   DateTime?
  registryUpdatedDate  DateTime?
  registryDomainId     String    @default("")
  registrar            String    @default("")
  registrarWhoisServer String    @default("")
  lastCheckedDate      DateTime?
  lastCheckError       String    @default("")
  checkPending         Boolean   @default(false)
  whoisData            String    @default("")
}

model WhoisServer {
  id     String @id @default(cuid())
  tld    String @default("")
  server String @default("")
}